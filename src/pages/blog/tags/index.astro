---
// Assets
import Bars from "@/components/assets/Bars.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Content
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<BaseLayout pageTitle={pageTitle}>
  <section>
    <Wrapper variant="standard" class="pb-2 pt-50">
      <Text
        tag="h1"
        variant="display6XL"
        class="font-bold tracking-tighter text-black text-balance"
        >Tag directory</Text
      >
      <Bars class="mt-2">Explore </Bars>
      <ol role="list" class="flex flex-col gap-2">
        {
          tags.map((tag, index) => (
            <li class="flex flex-col mt-8 gap-4">
              <Text
                tag="a"
                variant="displayXL"
                class="inline-block w-full font-bold text-black border-b border-dashed  hover:text-black/50 border-black/20 capitalize duration-300"
                href={`/blog/tags/${tag}`}
              >
                {tag}
              </Text>
            </li>
          ))
        }
      </ol>
    </Wrapper>
  </section>
</BaseLayout>
