---
// Assets
import Bars from "@/components/assets/Bars.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const colors = [
  {
    name: "Background & Foreground",
    shades: [
      { name: "White ", class: "bg-white outline outline-black/20" },
      { name: "Black ", class: "bg-black" },
    ],
  },
  {
    name: "Accents",
    shades: [
      { name: "cyan", class: "bg-cyan" },
      { name: "Yellow", class: "bg-yellow" },
      { name: "Gray", class: "bg-gray" },
      { name: "orange", class: "bg-orange" },
    ],
  },

  {
    name: "Base",
    shades: [
      { name: "Base 50", class: "bg-base-50 outline outline-base-200" },
      { name: "Base 100", class: "bg-base-100 " },
      { name: "Base 200", class: "bg-base-200 " },
      { name: "Base 300", class: "bg-base-300 " },
      { name: "Base 400", class: "bg-base-400 " },
      { name: "Base 500", class: "bg-black " },
      { name: "Base 600", class: "bg-black " },
      { name: "Base 700", class: "bg-base-700 " },
      { name: "Base 800", class: "bg-base-800 outline outline-base-700" },
      { name: "Base 900", class: "bg-black " },
      { name: "Base 950", class: "bg-base-950  " },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-2 pt-50">
      <Text
        tag="h1"
        variant="display6XL"
        class="font-bold tracking-tighter text-black text-balance"
      >
        Colors</Text
      >
      <Bars class="mt-2">Styles</Bars>

      <div class="mt-12 grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {
          colors.map((color) => (
            <div class="flex flex-col border-dashed gap-2 lg:border-l lg:border-black/10 lg:pl-8">
              <Text
                tag="p"
                variant="displaySM"
                class="font-semibold tracking-tight text-black text-balance"
              >
                {color.name}
              </Text>
              <div class="mt-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-1 gap-y-8">
                {color.shades.map((shade) => (
                  <div class="flex flex-col gap-2">
                    <div class={`size-full aspect-square  ${shade.class}`} />
                    <span class="text-xs font-medium text-black">
                      {shade.name}
                    </span>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
