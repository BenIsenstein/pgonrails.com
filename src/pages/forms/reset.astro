---
// Assets
import Bars from "@/components/assets/Bars.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-2 pt-50">
      <Text
        tag="h1"
        variant="display6XL"
        class="font-bold tracking-tighter text-black text-balance"
      >
        Reset
      </Text>
      <Bars class="mt-2">Get a new password</Bars>
    </Wrapper>
    <Wrapper variant="standard" class="py-2">
      <div class="px-8 py-12 bg-gray">
        <form action="#" method="POST" class="flex flex-col w-full gap-2">
          <div class="flex flex-col gap-1">
            <label for="email" class="block text-sm font-medium text-white"
              >Email Address</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="block w-full text-white border-transparent appearance-none bg-black/20 h-14 placeholder-white/80 focus:outline-none focus:ring-white"
            />
          </div>
          <div class="flex">
            <Button type="submit" size="xl" variant="default" class="w-full">
              Get a new password
            </Button>
          </div>
        </form>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
